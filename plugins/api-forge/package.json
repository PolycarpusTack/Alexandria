{
  "name": "apicarus",
  "version": "1.0.0",
  "description": "Professional API development and testing suite with shared knowledge repository for Alexandria Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.js$ --testPathIgnorePatterns=tests/integration",
    "test:ci": "npm run test:coverage -- --ci --watchAll=false --coverage --passWithNoTests",
    "coverage:report": "node tests/coverage-report.js",
    "coverage:open": "open coverage/lcov-report/index.html",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "api",
    "rest",
    "http",
    "testing",
    "development",
    "alexandria",
    "plugin"
  ],
  "author": {
    "name": "Alexandria Developer",
    "email": "dev@alexandria.platform"
  },
  "license": "MIT",
  "dependencies": {
    "@alexandria/shared": "workspace:*"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
}