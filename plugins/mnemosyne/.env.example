# Database Configuration
MNEMOSYNE_DB_HOST=localhost
MNEMOSYNE_DB_PORT=5432
MNEMOSYNE_DB_USER=alexandria
MNEMOSYNE_DB_PASSWORD=alexandria
MNEMOSYNE_DB_NAME=alexandria
DB_SSL=false

# Search Configuration
MNEMOSYNE_SEARCH_ENGINE=postgres
MNEMOSYNE_INDEXING_ENABLED=true

# Storage Configuration
MNEMOSYNE_ATTACHMENTS_PATH=./storage/mnemosyne/attachments
MNEMOSYNE_MAX_FILE_SIZE=10485760

# Development Settings
NODE_ENV=development
RUN_MIGRATIONS=true

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# AI Integration (Optional)
AI_PROVIDER=openai
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_ENABLED=false

# Feature Flags
ENABLE_REALTIME_COLLABORATION=true
ENABLE_AI_SUGGESTIONS=false
ENABLE_FILE_ATTACHMENTS=true
ENABLE_EXPORT_IMPORT=true