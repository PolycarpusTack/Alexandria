{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "../../node_modules/@types"
    ],
    "types": ["node", "express", "jest"]
  },
  "include": [
    "src/index-backend.ts",
    "src/types/alexandria/**/*",
    "src/utils/logger.ts",
    "src/utils/errors.ts",
    "src/database/data-source.ts",
    "src/database/entities/**/*",
    "src/database/migrations/**/*",
    "src/services/NodeService.ts",
    "src/services/ConnectionService.ts",
    "src/services/TemplateService.ts",
    "src/services/SearchService.ts",
    "src/services/AttachmentService.ts",
    "src/services/AuthService.ts",
    "src/services/WebSocketService.ts",
    "src/services/CacheService.ts",
    "src/repositories/NodeRepository.ts",
    "src/repositories/ConnectionRepository.ts",
    "src/api/controllers/node.controller.ts",
    "src/api/controllers/connection.controller.ts",
    "src/api/controllers/template.controller.ts",
    "src/api/controllers/attachment.controller.ts",
    "src/api/controllers/search.controller.ts",
    "src/api/router.ts",
    "src/api/validators/**/*",
    "src/middleware/auth.ts",
    "src/middleware/error-handler.ts",
    "src/middleware/validate-request.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "src/api/routes/**/*",
    "src/ui/**/*",
    "src/core/**/*",
    "src/types/!(alexandria)/**/*"
  ]
}