        log_level_count = len([
            line for line in lines 
            if re.search(r'\b(?:ERROR|WARN(?:ING)?|INFO|DEBUG|TRACE|FATAL|CRITICAL|NOTICE|SEVERE)\b', line, re.IGNORECASE)
