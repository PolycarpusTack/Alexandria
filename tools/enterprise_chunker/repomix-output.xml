                ('ref_definition', 'ref_definition'),
                ('reactive_definition', 'reactive_definition'),
                ('computed_definition', 'computed_definition'),
                ('watch_definition', 'watch_definition'),
                ('lifecycle_hook', 'lifecycle_hook')
            ]
            
