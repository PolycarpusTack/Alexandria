            boundaries.append({
                'index': script_match.start(1),
                'end': script_match.end(1),
                'text': script_match.group(1),
                'type': 'script_tag',
                'is_section': True
            })
            
            # Parse script content for JS structure
            script_content = script_match.group(2)
            script_start = script_match.start(2)
            
