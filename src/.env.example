# Alexandria Platform Configuration

# Server
PORT=3000

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Plugins
PLUGINS_DIR=./plugins

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alexandria
DB_USER=postgres
DB_PASSWORD=postgres

# Authentication
