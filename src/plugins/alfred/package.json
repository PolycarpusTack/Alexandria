{
  "name": "@alexandria/plugin-alfred",
  "version": "2.0.0",
  "description": "ALFRED - AI Coding Assistant Plugin for Alexandria",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:accessibility": "jest --testMatch='**/*.accessibility.test.*'",
    "test:qa": "jest --testMatch='**/*qa/*.test.*'",
    "lint": "eslint src/ ui/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ ui/ --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "qa:full": "node scripts/qa-check.js",
    "qa:ci": "npm run type-check && npm run lint && npm run test:coverage && npm run security:check",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean"
  },
  "keywords": [
    "alexandria",
    "plugin",
    "ai",
    "coding",
    "assistant",
    "alfred"
  ],
  "author": "Alexandria Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@playwright/test": "^1.49.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "axe-core": "^4.10.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "express": "^4.21.2",
    "jest-axe": "^9.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "mustache": "^4.2.0",
    "uuid": "^11.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@alexandria/(.*)$": "<rootDir>/../../$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ]
  }
}
