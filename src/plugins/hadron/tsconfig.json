{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "../../..",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"],
      "@plugins/*": ["src/plugins/*"],
      "@tools/*": ["tools/*"],
      "@components/*": ["src/client/components/*"],
      "@crash-analyzer/*": ["src/plugins/crash-analyzer/*"],
      "@log-viz/*": ["src/plugins/log-visualization/*"],
      "../../../../ui/*": ["src/ui/*"],
      "../../../../utils/*": ["src/utils/*"],
      "../../../../core/*": ["src/core/*"],
      "../../../../plugins/*": ["src/plugins/*"],
      "../../../../tools/*": ["tools/*"],
      "../../../ui/*": ["src/ui/*"],
      "../../../utils/*": ["src/utils/*"],
      "../../../core/*": ["src/core/*"],
      "../../../*": ["src/*"]
    },
    "typeRoots": ["../../../node_modules/@types", "../../../src/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../../types/**/*.d.ts",
    "../../../tools/**/*.d.ts"
  ],
  "files": ["global.d.ts", "../../../src/types/index.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}