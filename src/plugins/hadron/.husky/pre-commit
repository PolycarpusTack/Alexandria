#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running Hadron quality checks..."

# Run quality checks
cd src/plugins/hadron && node scripts/check-quality.js

if [ $? -ne 0 ]; then
  echo "âŒ Quality checks failed. Please fix the issues before committing."
  exit 1
fi

echo "âœ… Quality checks passed!"

# Run only staged file linting
git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | xargs npx eslint

if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi

echo "âœ¨ All checks passed! Proceeding with commit."